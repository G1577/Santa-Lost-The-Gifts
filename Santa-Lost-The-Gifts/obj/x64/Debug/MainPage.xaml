<Page x:ConnectionId='1'
    x:Class="Santa_Lost_The_Gifts.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Santa_Lost_The_Gifts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignHeight="1012.021" d:DesignWidth="1548.338"                     >


    <Grid Background="CadetBlue">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:ConnectionId='2' x:Name="UserLogin" Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="4" Grid.RowSpan="2" BorderBrush="Black" CornerRadius="15"
     VerticalAlignment="Stretch" FontSize="20"                     >
        </Button>
        <Button x:ConnectionId='3' x:Name="Game" Grid.Row="5" Grid.Column="7"  Grid.ColumnSpan="4" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="5" CornerRadius="15"
             VerticalAlignment="Stretch" Content="Start game" FontSize="40"                        >
        </Button>
        <Button x:ConnectionId='4' x:Name="Help"                    Grid.Row="9" Grid.Column="9"  Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image Source="ms-appx:///Assets/Buttons/Help.png"></Image>
        </Button>
        <Button x:ConnectionId='5' x:Name="SignInPage" Grid.Row="9" Grid.Column="6"  Grid.ColumnSpan="2" Grid.RowSpan="2"                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image Source="ms-appx:///Assets/Buttons/SignIn.png"></Image>
        </Button>
        <Button x:ConnectionId='6' x:Name="LevelsPage" Grid.Column="12" Grid.Row="9"                          Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image Source="ms-appx:///Assets/Buttons/Levels.png"></Image>
        </Button>
        <Button x:ConnectionId='7' x:Name="Settings" Grid.Column="3" Grid.Row="9"                        Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image Source="ms-appx:///Assets/Buttons/Settings.png"></Image>
        </Button>
        <Popup x:ConnectionId='8' x:Name="MusicPopup" Grid.ColumnSpan="9" Grid.Row="3" Grid.Column="4" Grid.RowSpan="10" >
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
             Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
             BorderThickness="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontFamily="arial rounded MT" FontSize="30">Music</TextBlock>
                    <Button x:ConnectionId='9' Name="MusicButtonControl"                                  
                 Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Image x:ConnectionId='13' Name="Music" IsTapEnabled="True"></Image>
                    </Button>
                    <ToggleSwitch x:ConnectionId='10' x:Name="soundEffect" FontSize="20" FontFamily="arial rounded MT" OnContent="click sound effect on"
                                               OffContent="click sound effect off" FontWeight="Bold"></ToggleSwitch>
                    <Slider x:ConnectionId='11' x:Name="Volume"  Maximum="100" FontFamily="arial rounded MT"
                 Header="volume" FontSize="20" FontWeight="Bold"  IsTextScaleFactorEnabled="True"                                   >
                    </Slider>
                    <Button x:ConnectionId='12' Content="Close"                             HorizontalAlignment="Center"/>
                </StackPanel>

            </Border>
        </Popup>
    </Grid>
</Page>

